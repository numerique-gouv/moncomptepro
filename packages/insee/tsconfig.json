{
  "compilerOptions": {
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "module": "NodeNext",
    "moduleResolution": "nodenext",
    "noFallthroughCasesInSwitch": true,
    "noPropertyAccessFromIndexSignature": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": "./dist",
    "paths": { "#src/*": ["./src/*"] },
    "strict": true,
    "types": ["node"],
    "verbatimModuleSyntax": true
  },
  "extends": "@tsconfig/node22/tsconfig.json",
  "references": []
}
