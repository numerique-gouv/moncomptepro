<div class="card-container">
    <div class="fr-card">
        <div class="fr-card__body">
            <div class="fr-card__content">
                <div>
                    <img src="/assets/tada.svg" alt="">
                </div>
                <br>
                <h4 class="fr-card__title">
                    Votre compte est créé !
                </h4>
                <div class="fr-card__desc">
                    <p>
                        Vous avez reçu un email de confirmation.
                    </p>

                    <% if (sponsor_label) { %>
                        <p>
                            Votre parrain <b><%= sponsor_label %></b> a été informé que vous avez rejoint son organisation sur MonComptePro.
                        </p>
                    <% } %>

                    <form action="/users/welcome" method="post">
                        <input type="hidden" name="_csrf" value="<%= csrfToken; %>" autocomplete="off">

                        <%- include('../partials/card-button-container.ejs', {label: 'Continuer'}) %>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
