<div class="card-container">
    <div class="fr-card">
        <div class="fr-card__body">
            <div class="fr-card__content">
                <h4 class="fr-card__title">
                    <%= organization.cached_libelle %>
                </h4>
                <div class="fr-card__desc">
                    <%- include('../partials/notifications.ejs', {notifications: notifications}) %>
                    <p>
                        <b>Nom complet :</b> <%= organization.cached_nom_complet %><br/>
                        <b>Enseigne :</b> <%= organization.cached_enseigne %><br/>
                        <b>SIRET :</b> <%= organization.siret %><br/>
                        <b>Tranche effectif salarié de l’entité :</b> <%= organization.cached_libelle_tranche_effectif %><br/>
                        <b>Adresse :</b> <%= organization.cached_adresse %><br/>
                        <b>Code postal :</b> <%= organization.cached_code_postal %><br/>
                        <b>Activité principale (NAF/APE) :</b> <%= organization.cached_libelle_activite_principale %><br/>
                        <b>Nature juridique :</b> <%= organization.cached_libelle_categorie_juridique %><br/>
                    </p>
                    <p>
                        Si vous ne travaillez plus pour cette organisation, vous pouvez quitter l’organisation.
                    </p>
                    <form action="/users/quit-organization/<%= organization.id %>" method="post">
                        <input type="hidden" name="_csrf" value="<%= csrfToken; %>" autocomplete="off">

                        <div class="card-button-container">
                            <span>
                                <a class="fr-link fr-fi-arrow-left-line fr-link--icon-left" href="/users/manage-organizations">
                                    retour
                                </a>
                            </span>
                            <button class="fr-btn fr-btn--secondary" type="submit">
                                Quitter l’organisation
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
